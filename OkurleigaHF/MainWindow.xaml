<Window
    x:Class="OkurleigaHF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OkurleigaHF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Okurleiga hf"
    Width="800"
    Height="450"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">
    <Grid>
        <Image Source="Pictures/building.jpg" Stretch="Fill"/>

        <Button Style="{StaticResource BtnButtons}" materialDesign:ButtonAssist.CornerRadius="50" 
            x:Name="BtnProperties"
            Width="213"
            Height="59"
            FontSize="18"
            FontWeight="Normal"
            Margin="59,203,0,0"
            Click="BtnProperties_Click"
            Content="Húsnæði"/>
        <Button Style="{StaticResource BtnButtons}" materialDesign:ButtonAssist.CornerRadius="10"
            x:Name="BtnTenants"
            Width="213"
            Height="59"
            FontSize="18"
            FontWeight="Normal"
            Margin="58,283,0,0"
            Click="BtnTenants_Click"
            Content="Leigjendur"/>
    </Grid>
</Window>
