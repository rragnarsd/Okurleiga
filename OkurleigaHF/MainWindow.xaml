<Window
    x:Class="OkurleigaHF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OkurleigaHF"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Okurleiga hf"
    Width="800"
    Height="450"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize">
    
    <Grid>
        <Image Source="Pictures/building.jpg" Stretch="Fill"/>
        
        <Button
            x:Name="BtnProperties"
            Width="213"
            Height="59"
            Margin="59,203,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnProperties_Click"
            Content="Húsnæði" Background="#FF1B5481" BorderBrush="#FF1B5481" FontSize="16"
            materialDesign:ButtonAssist.CornerRadius="2"/>
        <Button
            x:Name="BtnTenants"
            Width="213"
            Height="59"
            Margin="58,283,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BtnTenants_Click"
            Content="Leigjendur" BorderBrush="#FF1B5481" Background="#FF1B5481" FontSize="16"
            materialDesign:ButtonAssist.CornerRadius="2"/>
    </Grid>
</Window>
