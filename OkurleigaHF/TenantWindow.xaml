<Window x:Class="OkurleigaHF.TenantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OkurleigaHF"
        mc:Ignorable="d"
        Title="Tenant" Height="427.999" Width="808" Loaded="Window_Loaded">
    <Grid >
        <Button Content="Nýskrá viðskiptavin" HorizontalAlignment="Left" Margin="33,53,0,0" VerticalAlignment="Top" Width="244" Height="37"/>
        <DataGrid ItemsSource="{Binding}" AutoGenerateColumns="False" Height="244" Margin="33,121,29.333,0" VerticalAlignment="Top" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nafn" Binding="{Binding Path=FullName}"/>
                <DataGridTextColumn Header="Símanúmer" Binding="{Binding Path=Phone}"/>
                <DataGridTextColumn Header="Netfang" Binding="{Binding Path=Email}"/>
                <DataGridTextColumn Header="Íbúð í útláni" Binding="{Binding Path=PropertyForRent.AddressZipCode}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
